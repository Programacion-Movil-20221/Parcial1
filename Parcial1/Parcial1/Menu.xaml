<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Parcial1.Menu"
             Title="Menu">
    <ContentPage.Content>
        <Frame BackgroundColor="Beige">
            <StackLayout>
                <Image Source="cuenta" BackgroundColor="Transparent"/>

                <StackLayout Padding="0">
                    <Button Text="Page Factura" CornerRadius="32" FontSize="25"
                            HeightRequest="80" FontAttributes="Bold"
                            BackgroundColor="Wheat" Clicked="Ir_Page_Factur"/>
                    <Button Text="Page Productos" CornerRadius="32" FontSize="25"
                            HeightRequest="80" FontAttributes="Bold"
                            BackgroundColor="Wheat" Clicked="Ir_Page_Product" />
                </StackLayout>
                <Image Source="atcaffe"/>
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>